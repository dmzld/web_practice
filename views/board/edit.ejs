<!DOCTYPE html>
<html>
  <body>
      <div>
          <div>
            <a href="/">Back</a>
          </div>
          <h2>Edit</h2>
          <form action="/board/<%= board._id %>?_method=put" method="post">
            <div>
              <label for="title">title</label>
              <input type="text" id="title" name="title" value="<%= board.title %>">
            </div>
            <div>
              <label for="date">date</label>
              <input type="text" id="date" name="date" value="<%= new Date().toLocaleString() %>">
            </div>
            <div>
              <label for="contents">contents</label>
              <input type="text" id="contents" name="contents" value="<%= board.contents %>">
            </div>
            <div>
              <button type="submit">Submit</button>
            </div>
          </form>
        </div>
  </body>
</html>
